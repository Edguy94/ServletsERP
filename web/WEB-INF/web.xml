<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CicloVida</servlet-name>
        <servlet-class>es.albarregas.servlets.CicloVida</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ParamIniciales</servlet-name>
        <servlet-class>es.albarregas.servlets.ParamIniciales</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HolaMundo</servlet-name>
        <servlet-class>es.albarregas.servlets.HolaMundo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Cabeceras</servlet-name>
        <servlet-class>es.albarregas.servlets.Cabeceras</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>es.albarregas.servlets.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CicloVida</servlet-name>
        <url-pattern>/CicloVida</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ParamIniciales</servlet-name>
        <url-pattern>/ParamIniciales</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HolaMundo</servlet-name>
        <url-pattern>/HolaMundo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Cabeceras</servlet-name>
        <url-pattern>/Cabeceras</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
